# Makefile for building 'school' executable

# Compiler to be used
CC := gcc

# List of .c source files
SRC := main.c school.c

# Name of the executable
NAME := school

# Convert .c source files to .o object files
OBJ := $(SRC:.c=.o)

# Command for deleting files
RM := rm -f

# Rule to build the executable
all: $(NAME)

# Rule to build the executable from object files
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile source files into object files
%.o: %.c
	$(CC) -c $< -o $@

# Rule to clean temporary files and the executable
clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\# 

# Rule to clean object files
oclean:
	$(RM) $(OBJ)

# Rule to clean all temporary files, executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all
